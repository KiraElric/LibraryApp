<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Isbn</th>
      <th>Stock</th>
      <th>Edition number</th>
      <th>Genre</th>
      <th>Language</th>
      <th>Pages</th>
      <th>Publisher</th>
      <th>Authors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>
        <td><%= book.stock %></td>
        <td><%= book.edition_number %></td>
        <td><%= book.genre %></td>
        <td><%= book.language %></td>
        <td><%= book.pages %></td>
        <td><%= book.publisher %></td>
        <td>
          <% if book.authors.present? %><!-- Consultar si el libro tiene authores, de ser true muestra lo de abajo, si no muestra otra cosa -->
            <ul>
              <% book.authors.each do |author| %><!-- Lista los autores que pertenecen a este libro -->
                <li><%= author.full_name %></li>
              <% end %>
            </ul>
          <% else %>
            Anonimus
          <% end %>
        </td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

